<!DOCTYPE html>
<html>
    <head>
        
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        {% if is_granted('ROLE_ADMIN') %}

            <a href="{{ path('app_user_index') }}">Page d'administration</a>
        {% endif %}
    </head>

    <body>
        <table class="table">   
                <tr>
                    <th>
                    <a href="{{ path('app_home_index') }}">Accueils</a>
                    </th>
                    <th>
                    <a href ="{{path('app_team_index') }}">Equipe</a>
                    </th>
                    <th>
                    <a href="{{ path('app_home_newsletter') }}">Newsletters</a>
                    </th>
                    <th>
                    <a href="{{ path('app_contact_new') }}">Nous contacter</a>
                    </th>
                    {% if app.user %}
                        <a href="{{ path('app_user_show', {'id': app.user.id}) }}">Profil</a>
                        <p> </p>
                        <a href="{{ path('app_logout') }}">Se déconnecter</a>
                    {% else %}
                    <a href="{{path('app_login')}}"> Se connecter </a>
                    <a href="{{ path('app_register') }}">Création de compte</a>
                    {% endif %}
                    
                </tr>
            </table>
        
        {% block body %}{% endblock %}
    </body>
</html>
